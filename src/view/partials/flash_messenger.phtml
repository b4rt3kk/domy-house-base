<?php
$flashMessenger = $this->serviceManager()->get(\Laminas\Mvc\Plugin\FlashMessenger\FlashMessenger::class);
/* @var $flashMessenger \Laminas\Mvc\Plugin\FlashMessenger\FlashMessenger */
?>
<div class="messenger">
    <!-- informacje o błędzie -->
    <?php if ($flashMessenger->getErrorMessages()) : ?>
    <?php foreach ($flashMessenger->getErrorMessages() as $message) : ?>
    <div class="alert alert-danger" role="alert"><i class="fas fa-exclamation icon"></i> <?php echo $this->translate($message); ?></div>
    <?php endforeach; ?>
    <?php endif; ?>
    <!-- sukces -->
    <?php if ($flashMessenger->getSuccessMessages()) : ?>
    <?php foreach ($flashMessenger->getSuccessMessages() as $message) : ?>
    <div class="alert alert-success" role="alert"><i class="fas fa-check icon"></i> <?php echo $this->translate($message); ?></div>
    <?php endforeach; ?>
    <?php endif; ?>
    <!-- ostrzeżenia -->
    <?php if ($flashMessenger->getWarningMessages()) : ?>
    <?php foreach ($flashMessenger->getWarningMessages() as $message) : ?>
    <div class="alert alert-warning" role="alert"><i class="fas fa-exclamation icon"></i> <?php echo $this->translate($message); ?></div>
    <?php endforeach; ?>
    <?php endif; ?>
    <!-- informacje -->
    <?php if ($flashMessenger->getInfoMessages()) : ?>
    <?php foreach ($flashMessenger->getInfoMessages() as $message) : ?>
    <div class="alert alert-info" role="alert"><i class="fas fa-info icon"></i> <?php echo $this->translate($message); ?></div>
    <?php endforeach; ?>
    <?php endif; ?>
    <!-- pozostałe wiadomości flash (bez kategorii -->
    <?php if ($flashMessenger->getMessages()) : ?>
    <?php foreach ($flashMessenger->getMessages() as $message) : ?>
    <div class="alert alert-primary" role="alert"><i class="fas fa-info icon"></i> <?php echo $this->translate($message); ?></div>
    <?php endforeach; ?>
    <?php endif; ?>
</div>
